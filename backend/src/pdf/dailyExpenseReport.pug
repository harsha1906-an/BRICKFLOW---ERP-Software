doctype html
html
  head
    style.
      @page {
        size: A4;
        margin: 15mm;
      }
      body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        color: #333;
        font-size: 12px;
        line-height: 1.5;
      }
      .header {
        margin-bottom: 20px;
        border-bottom: 2px solid #0091ea; /* Blue line */
        padding-bottom: 10px;
      }
      .report-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
      }
      .meta-info {
        font-size: 14px;
        color: #666;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        background-color: #fff;
      }
      th {
        background-color: #0288d1; /* Reference Blue */
        color: #fff;
        text-align: left;
        padding: 8px 10px;
        font-weight: 600;
        border: 1px solid #0288d1;
      }
      td {
        padding: 8px 10px;
        border: 1px solid #e0e0e0;
      }
      tr:nth-child(even) {
        background-color: #f5f5f5; /* Alternating Row Color */
      }
      .text-right {
        text-align: right;
      }
      .text-center {
        text-align: center;
      }
      .amount-cell {
        font-family: 'Courier New', Courier, monospace;
        font-weight: bold;
      }
      .footer-section {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 100%;
      }
      .signature-box {
        float: right;
        width: 250px;
        text-align: center;
        border-top: 1px solid #333;
        padding-top: 10px;
        margin-right: 15mm; /* Align with page margin */
        font-weight: bold;
      }
      .total-row td {
        background-color: #e1f5fe;
        font-weight: bold;
        color: #01579b;
        border-top: 2px solid #0288d1;
      }
      
  body
    .header(style="display: flex; justify-content: space-between; align-items: center;")
      div
        if logo
          img(src=logo, style="max-height: 50px; margin-bottom: 10px;")
        .report-title Daily Summary
        div(style="font-size: 10px; color: #666; margin-top: 5px")
            div #{settings.company_name}
            if settings.company_address
                div #{settings.company_address}
            div
                if settings.company_phone
                    span Phone: #{settings.company_phone} 
                if settings.company_email
                    span | Email: #{settings.company_email}
      .meta-info(style="text-align: right;")
        div Date: #{date}

    if items.length > 0
      table
        thead
          tr
            th(style="width: 5%") #
            th(style="width: 15%") Category
            th(style="width: 20%") Party / Source
            th(style="width: 30%") Description / Villa
            th(style="width: 15%; text-align:right") Income
            th(style="width: 15%; text-align:right") Expense
        tbody
          each item, index in items
            tr(style="background-color: " + (item.type === 'income' ? '#f1f8e9' : 'transparent'))
              td #{index + 1}
              td #{item.category}
              td #{item.payee}
              td #{item.description}
              td.text-right.amount-cell
                if item.type === 'income'
                  | #{moneyFormatter({ amount: item.amount })}
              td.text-right.amount-cell
                if item.type === 'expense'
                  | #{moneyFormatter({ amount: item.amount })}
          
          tr.total-row
            td(colspan="4", style="text-align:right") Totals:
            td.text-right(style="color: green") #{moneyFormatter({ amount: totalIncome })}
            td.text-right(style="color: red") #{moneyFormatter({ amount: totalExpense })}
          tr
             td(colspan="6", style="text-align:right; font-weight:bold; padding-top:10px")
                span Net Balance: 
                span(style="color:" + (netBalance >= 0 ? "green" : "red")) #{moneyFormatter({ amount: netBalance })}

    else
      div(style="text-align:center; padding: 40px; color: #999") No transactions recorded for this date.

    .footer-section
      .signature-box Authorized Signature
