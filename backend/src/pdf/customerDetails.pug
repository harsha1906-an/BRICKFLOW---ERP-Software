doctype html
html
  head
    style.
      @page {
        size: A4;
        margin: 15mm;
      }
      body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        color: #333;
        font-size: 12px;
        line-height: 1.5;
      }
      .header {
        margin-bottom: 20px;
        border-bottom: 2px solid #0091ea; /* Blue line */
        padding-bottom: 10px;
      }
      .report-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
      }
      .meta-info {
        font-size: 14px;
        color: #666;
      }
      .client-info-section {
        margin-top: 20px;
        margin-bottom: 30px;
      }
      .section-header {
        background-color: #0288d1; /* Reference Blue */
        color: #fff;
        padding: 8px 10px;
        font-weight: 600;
        font-size: 14px;
        border-radius: 4px 4px 0 0;
      }
      .info-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #e0e0e0;
      }
      .info-table td {
        padding: 10px;
        border-bottom: 1px solid #e0e0e0;
        vertical-align: top;
      }
      .label-cell {
        background-color: #f5f5f5;
        font-weight: bold;
        width: 30%;
        color: #555;
      }
      .value-cell {
        width: 70%;
      }
      .footer-section {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 100%;
        text-align: center;
        font-size: 10px;
        color: #999;
        border-top: 1px solid #eee;
        padding-top: 10px;
      }

  body
    .header(style="display: flex; justify-content: space-between; align-items: center;")
      div
        if logo
          img(src=logo, style="max-height: 50px; margin-bottom: 10px;")
        .report-title Customer Details
        div(style="font-size: 10px; color: #666; margin-top: 5px")
            div #{settings.company_name}
            if settings.company_address
                div #{settings.company_address}
            div
                if settings.company_phone
                    span Phone: #{settings.company_phone} 
                if settings.company_email
                    span | Email: #{settings.company_email}
      .meta-info(style="text-align: right;")
        divGenerated: #{moment().format(dateFormat)}

    .client-info-section
      .section-header Personal Information
      table.info-table
        tr
          td.label-cell Name
          td.value-cell #{model.name}
        tr
          td.label-cell Customer ID
          td.value-cell #{model.customerId || '-'}
        tr
          td.label-cell Phone
          td.value-cell #{model.phone || '-'}
        tr
          td.label-cell Email
          td.value-cell #{model.email || '-'}
        tr
          td.label-cell Gender
          td.value-cell #{model.gender ? (model.gender.charAt(0).toUpperCase() + model.gender.slice(1)) : '-'}
        tr
          td.label-cell Address
          td.value-cell #{model.address || '-'}

    .client-info-section
      .section-header Additional Details
      table.info-table
        tr
          td.label-cell Father Name
          td.value-cell #{model.fatherName || '-'}
        tr
          td.label-cell Date of Birth
          td.value-cell #{model.dob ? moment(model.dob).format(dateFormat) : '-'}
        tr
          td.label-cell Aadhar Card Number
          td.value-cell #{model.aadharCardNumber || '-'}
        tr
          td.label-cell PAN Card Number
          td.value-cell #{model.panCardNumber || '-'}
        tr
          td.label-cell Driving Licence
          td.value-cell #{model.drivingLicence || '-'}

    .client-info-section
      .section-header Nominee Details
      table.info-table
        tr
          td.label-cell Nominee Name
          td.value-cell #{model.nomineeName || '-'}
        tr
          td.label-cell Relationship
          td.value-cell #{model.nomineeRelationship || '-'}
        tr
          td.label-cell Father's / Husband's Name
          td.value-cell #{model.nomineeFatherHusbandName || '-'}
        tr
          td.label-cell Date of Birth
          td.value-cell #{model.nomineeDob ? moment(model.nomineeDob).format(dateFormat) : '-'}
        tr
          td.label-cell Mobile Number
          td.value-cell #{model.nomineeMobile || '-'}
        tr
          td.label-cell Address
          td.value-cell #{model.nomineeAddress || '-'}

    .footer-section
      | This document is system generated by #{settings.company_name}.
