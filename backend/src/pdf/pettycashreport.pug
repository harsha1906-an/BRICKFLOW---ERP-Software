doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      @page { size: A4 portrait; margin: 10mm; }
      body { width: 100%; margin: 0; padding: 0px; background: #ffffff; font-family: sans-serif; font-size:11px; color:#222; box-sizing: border-box; }
      *, *:before, *:after { box-sizing: inherit; color:#222; }
      .clearfix { display: block; width: 100%; }
      .left { float:left; }
      .right { float:right; }
      .text-center { text-align: center; }
      .text-right { text-align: right; }
      .top-area { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px; }
      .logo { width: 120px; }
      .report-title { font-size: 28px; color: #000080; text-transform: uppercase; margin: 0; font-weight: 900; }
      
      .info-section { width: 100%; margin-bottom: 20px; display: flex; justify-content: space-between; }
      .info-box { width: 48%; }
      .info-row { display: flex; margin-bottom: 8px; border-bottom: 1px solid #ccc; }
      .info-label { width: 100px; color: #800080; font-weight: bold; padding: 2px 0; }
      .info-value { flex-grow: 1; padding: 2px 5px; }

      .table-report { width: 100%; border-collapse: collapse; margin-bottom: 30px; }
      .table-report th { background: #000080; color: #ffffff; padding: 8px; border: 1px solid #000; text-align: center; font-weight: bold; font-size: 12px; }
      .table-report td { padding: 8px; border: 1px solid #000; text-align: center; height: 30px; }
      .table-report tr:nth-child(even) { background: #f9f9f9; }
      
      .signature-section { margin-top: 50px; display: flex; justify-content: space-between; padding: 0 50px; }
      .sig-box { text-align: center; width: 200px; border-top: 1px solid #000; padding-top: 10px; }
      
  body
    - const reports = Array.isArray(model) ? model : [model]
    
    each report, i in reports
      .page-container(style= "position: relative; min-height: 95vh; display: flex; flex-direction: column;" + (i < reports.length - 1 ? " page-break-after: always;" : ""))
        .top-area
          if logo
            img.logo(src=logo)
          else
            div(style="width: 120px; height: 50px; background: #eee; text-align: center; line-height: 50px;") LOGO
          h1.report-title Petty Cash Book
    
        .info-section
          .info-box
            .info-row
              .info-label Date
              .info-value #{moment(report.date).format(dateFormat)}
            .info-row
              .info-label Manager
              .info-value #{report.manager || 'Manoja Kumar'}
            .info-row
                .info-label Opening Balance
                .info-value #{moneyFormatter({amount: report.openingBalance})}
          .info-box
            .info-row
              .info-label Total In (Cum.)
              .info-value #{moneyFormatter({amount: report.totalCashReceived})}
            .info-row
              .info-label Total Out (Cum.)
              .info-value #{moneyFormatter({amount: report.totalExpenses})}
            .info-row
              .info-label Closing Balance
              .info-value #{moneyFormatter({amount: report.currentBalance})}

        div(style="flex: 1;")
          table.table-report
            thead
              tr
                th(style="width: 12%") Date
                th(style="width: 23%") Description
                th(style="width: 10%") Type
                th(style="width: 15%") Amount
                th(style="width: 15%") Run. Bal.
                th(style="width: 10%") Receipt #
                th(style="width: 15%") Notes
            tbody
              if report.items && report.items.length > 0
                  each item in report.items
                    tr
                      td #{moment(item.date).format(dateFormat)}
                      td #{item.name}
                      td #{item.type === 'inward' ? 'Top-up' : 'Expense'}
                      td(style="color: " + (item.type === 'inward' ? '#008000' : '#d32f2f'))
                        | #{item.type === 'inward' ? '+' : '-'} #{moneyFormatter({amount: item.amount})}
                      td(style="font-weight:bold") #{moneyFormatter({amount: item.runningBalance})}
                      td #{item.receiptNumber || '-'}
                      td #{item.note || '-'}
              else
                  tr
                      td(colspan="7", style="text-align:center; padding: 20px; color: #777;") No transactions for this day.
              
              // Fill empty rows to maintain A4 look (optional, but good for structure if short)
              - var emptyRows = Math.max(0, 10 - (report.items ? report.items.length : 0))
              if emptyRows > 0
                - for (var x = 0; x < emptyRows; x++)
                  tr
                    td(style="height:30px")
                    td
                    td
                    td
                    td
                    td
                    td

        .signature-section(style="margin-top: auto;")
          .sig-box 
            strong Prepared By
          .sig-box 
            strong Authorized Signature
