doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      .sheet { margin: 0; width: 100%; height: 297mm; }
      body { width: 100%; margin: 0; padding: 20px; background: #ffffff; font-family: sans-serif; font-size:12px; color:#222; }
      *, *:before, *:after { box-sizing: inherit; color:#222; }
      .clearfix { display: block; }
      .left { float:left; }
      .right { float:right; }
      .header-section { margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 10px; }
      .report-title { font-size: 24px; color: #333; margin: 0; font-weight: normal; }
      .criteria-section { background: #f0f0f0; border: 1px solid #ddd; padding: 10px; margin-bottom: 20px; border-radius: 4px; }
      .table-report { width: 100%; border-collapse: collapse; border-spacing: 0; margin-bottom: 20px; }
      .table-report th { background: #0088cc; color: #ffffff; padding: 10px; font-weight: bold; font-size: 12px; text-align: left; border: 1px solid #0077b3; }
      .table-report td { padding: 8px 10px; text-align: left; font-size: 11px; border: 1px solid #ddd; color: #333; }
      .table-report tr:nth-child(even) td { background: #f9f9f9; }
      .footer-report { margin-top:30px; color: #5d6975; width: 100%; text-align: center; font-size: 10px; }
      .tag { padding: 4px 8px; border-radius: 4px; font-size: 10px; font-weight: bold; }
      .tag-green { color: #389e0d; font-weight: bold; }
      .tag-red { color: #cf1322; font-weight: bold; }

  body
    header.header-section.clearfix
      .left
        h1.report-title Customer Summary
        a(href="#" style="font-size: 12px; color: #0088cc; text-decoration: none;") << Back to Reports
      .right
        img.logo(src=settings.public_server_file+settings.company_logo style="max-height: 50px;")

    .criteria-section
        strong Report Criteria
        div(style="margin-top: 5px;")
            span Date Range: 
            strong All Time
    
    .section-title(style="margin-bottom: 10px; font-weight: bold;") Customer Summary

    main
      table.table-report
        thead
          tr
            th Date
            th Name
            th Phone
            th Customer ID / Email
            th Booked Villa
            th Status
        tbody
          each client in model.clients
            tr
              td #{moment(client.created).format(dateFormat)}
              td #{client.name}
              td #{client.phone || '-'}
              td 
                div #{client.customerId || '-'}
                div(style="font-size:10px; color:#666") #{client.email || ''}
              td #{client.villaNumber ? client.villaNumber : '-'}
              td
                if client.enabled
                  span.tag-green Active
                else
                  span.tag-red Disabled

    footer.footer-report
      | Report generated by #{settings.company_name} on #{moment().format('MMMM Do YYYY, h:mm:ss a')}
